@import "../../dashboard/dashboard.component.scss";

:host ::ng-deep {
  .p-fluid .p-inputtext {
    height: 30px;
  }

  .p-datatable.p-datatable-sm .p-datatable-thead > tr > th {
    padding: 0.1rem 0.3rem;
  }

  .p-button.p-button-icon-only.p-button-rounded {
    height: 1.8rem;
    width: 1.8rem;
  }
  .p-datatable-wrapper {
    min-height: 350px;
  }
}

:host ::ng-deep .p-message-custom {
  background-color: #e1cfe7;
  border: solid #8a427a;
  border-width: 0 0 0 6px;
  color: #2c1e30;
}

:host ::ng-deep .p-message-close-icon {
  color: #2c1e30;
}

.member-list {
  // padding: 150px 0 0 0;
  margin-bottom: 30px;
  // background-color: #fafafa;
  box-shadow: 1px 5px 24px 0 rgb(68 102 242 / 5%);
  border-radius: 5px;
  padding: 0 25px 0 25px;
  background-color: var(--whiteColor);
  .header {
    padding: 20px 0;
    display: flex;
    justify-content: space-between;
    h4 {
      padding: 20px;
    }
  }
}

// Filter Css

.filterCard {
  background: transparent;
  border: 1px solid #e5e7f2;
  color: var(--mainColor);
  margin: 10px;
  padding: 10px;
  border-radius: 5px;
  cursor: pointer;

  &:hover {
    background-color: var(--mainColor);
    color: #ffffff;
  }
}

.widget_categories {
  background-color: var(--whiteColor);
  padding: 20px;
  margin-bottom: 30px;
  ul {
    padding-left: 0;
    margin-bottom: 0;
    list-style-type: none;
    li {
      position: relative;
      margin-bottom: 12px;
      overflow: hidden;
      color: var(--blackColor);
      padding-left: 16px;
      font-weight: 600;
      font-size: var(--fontSize);
      cursor: pointer;

      &:hover {
        color: var(--mainColor);
      }
    }
    li::before {
      background: var(--mainColor);
      height: 8px;
      width: 8px;
      content: "";
      left: 0;
      top: 7px;
      position: absolute;
    }
  }
  .widget-title {
    margin-bottom: 25px;
    position: relative;
    padding-bottom: 7px;
    border-bottom: 1px solid #eeeeee;
    font-size: 20px;
  }
  .widget-title::before {
    content: "";
    position: absolute;
    left: 0;
    bottom: 0;
    width: 50px;
    height: 1px;
    bottom: -1px;
    background-color: var(--mainColor);
  }
}
:host ::ng-deep {
  .p-column-filter-row {
    display: block;
    height: 35px;
    padding-top: 2px;
  }
  .p-datepicker table th {
    text-align: center !important;
  }
}

:host ::ng-deep {
  .flex {
    .p-button {
      margin-top: 10px;
    }
  }

  @media (min-width: 370px) {
    .flex {
      display: flex;
      width: 100%;
      justify-content: space-between;

      .p-button {
        margin-top: 0;
      }
    }
  }
}

:host ::ng-deep .p-datatable-responsive-scroll > .p-datatable-wrapper {
  min-height: 60vh;
}
