$border: 1px solid rgb(192 179 179);

.add-listings-box {
  min-height: 70vh !important;
  .form-group {
    margin-bottom: 0 !important;
  }
  .table {
    border: $border;
    border-radius: 5px;
    .row {
      --bs-gutter-x: 0;
      .table-cols {
        border-bottom: $border;
        
        &:last-child,
        &:nth-child(7) {
          
          border-bottom: unset;
        }
        
        &:nth-of-type(odd) {
          border-right: $border;
  
        }
      }
    }
  }
}

@media (min-width: 576px) {
  .right {
    text-align: right;
  }
}
